<%= form_with(model: [current_user, show], local: true) do |form| %>
  <% if show.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(show.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
        <% show.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.file_field :image, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_field :title, class:'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.text_area :content, class:'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.date_select :date, class:'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.number_field :duration, class:'form-control'  %>
  </div>


  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
