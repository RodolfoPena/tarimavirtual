<div class="row">
<div class="offset-md-4 col-md-4">
<h2 class="text-center">Entrar a tarimavirtual</h2>
<br>
<div id="parent">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), id:'form_login') do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Correo Electrónico', class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "current-password", placeholder:'Contraseña', class:'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me, class:'form-check' %>
      <%= f.label  :remember_me, 'Recordarme' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Iniciar sesión", class:'btn btn-primary', class:'form-control' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
